<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             x:Class="Grocery.App.Views.RegisterView"
             Title="Registreren">
    <StackLayout Padding="20" VerticalOptions="Center">
        <Label Text="Registreren" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="NameEntry" Placeholder="Naam" />
        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Wachtwoord" IsPassword="True" />

        <Button Text="Account aanmaken" Clicked="OnRegisterClicked" />

        <Label x:Name="MessageLabel" TextColor="Red" />
    </StackLayout>
</ContentPage>